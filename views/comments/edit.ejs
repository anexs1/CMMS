<%- include ("../partials/header") %>

<div class="container-fluid">
	<div class="container">
		<h1 class="text-center">
			Edit Comment
		</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/assets/<%= asset_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-primary btn-block">
						Submit
					</button>
				</div>
				<a href="/assets/<%= asset_id %>">Go Back</a>
			</form>
		</div>

	</div>
</div>


<%- include ("../partials/footer") %>