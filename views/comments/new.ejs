					<input class="form-control" type="text" name="comment[text]" placeholder="Comment">
				</div>
				<!-- <div class="form-group">
					<input class="form-control" type="text"	name="comment[user]" placeholder="user">
				</div> -->
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-primary btn-block">
						Submit
					</button>
				</div>
				<a href="/assets">Go Back</a>
			</form>
		</div>

	</div>
</div>


