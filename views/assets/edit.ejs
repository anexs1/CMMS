<%- include ("../partials/header") %>

<div class="container-fluid">
	<div class="container">
		<h1 class="text-center">
			Edit <%= asset.fc %>
		</h1>
		<div style="width: 30%; margin: 0 auto;">
			<form action="/assets/<%= asset._id %>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" name="asset[fc]" value="<%= asset.fc %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text"	name="asset[img]" value="<%= asset.img %>">
				</div>
				<div class="form-group">
					<input class="form-control" type="text"	name="asset[description]" value="<%= asset.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-default btn-primary btn-block">
						Submit
					</button>
				</div>
				<a href="/assets">Go Back</a>
			</form>
		</div>

	</div>
</div>

<%- include ("../partials/footer") %>